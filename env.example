# Configurações da API
NEXT_PUBLIC_API_BASE_URL=https://abitus-api.geia.vip

# Modo de desenvolvimento (usar mock quando API estiver indisponível)
NEXT_PUBLIC_USE_API_MOCK=false

# Configurações de paginação
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=50

# Configurações de timeout (em milissegundos)
NEXT_PUBLIC_API_TIMEOUT=15000
NEXT_PUBLIC_API_STATUS_TIMEOUT=5000

# Configurações de geolocalização
NEXT_PUBLIC_GEOLOCATION_TIMEOUT=10000
NEXT_PUBLIC_GEOLOCATION_MAX_AGE=300000

# Configurações de upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_MAX_FILES=5
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Configurações de validação
NEXT_PUBLIC_MIN_INFORMATION_LENGTH=10
NEXT_PUBLIC_MAX_INFORMATION_LENGTH=500
NEXT_PUBLIC_MAX_DATE_RANGE_DAYS=365
